<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content" >

	<ScrollView android:id="@+id/login_screen"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >

			<View   android:id="@+id/_bg__login_screen"
				android:background="@drawable/_bg__login_screen_shape"
				 android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:layout_width="360dp"
				android:layout_height="800dp" />

			<RelativeLayout android:id="@+id/text_fields"
				android:layout_marginTop="228dp"
				android:layout_marginStart="75dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<View   android:id="@+id/_bg__text_fields_ek1"
					android:background="#80000000"
					 android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="210dp"
					android:layout_height="165dp" />

				<EditText
					android:id="@+id/text_field_email"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="210dp"
					android:hint="Email"
					android:layout_height="48dp" />

				<EditText
					android:id="@+id/text_field_password"
					 android:layout_marginStart="0dp"
					android:layout_marginTop="62dp"
					android:layout_width="210dp"
					android:hint="Password"
					android:layout_height="48dp" />

				<EditText
					android:id="@+id/text_field_nickname"
					android:layout_marginStart="0dp"
					android:layout_marginTop="124dp"
					android:layout_width="210dp"
					android:hint="Nickname"
					android:layout_height="48dp" />

			</RelativeLayout>

			<RelativeLayout android:id="@+id/state_layer"
				android:layout_marginTop="500dp"
				android:layout_marginStart="90dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<Button
					android:id="@+id/register_btn"
					android:background="@drawable/_bg__state_layer_ek3_shape"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
					android:layout_width="161dp"
					android:layout_height="40dp"
					/>

			</RelativeLayout>

		</RelativeLayout>

	</ScrollView>
</HorizontalScrollView>